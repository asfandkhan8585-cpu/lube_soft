<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.sunjavatech.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lubesoft.controller.InventoryController"
            styleClass="content-view">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
            <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
            <Label text="Inventory" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Search products..." prefWidth="220"
                       onAction="#handleSearch"/>
            <Button text="Search" onAction="#handleSearch" styleClass="secondary-button"/>
            <Button text="New Product" onAction="#handleNew" styleClass="primary-button"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="0">
            <!-- Product list -->
            <TableView fx:id="productsTable" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colSku" text="SKU" prefWidth="110"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="260"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
                    <TableColumn fx:id="colSellPrice" text="Price" prefWidth="90"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    <TableColumn fx:id="colMinStock" text="Min" prefWidth="70"/>
                </columns>
            </TableView>

            <!-- Product form -->
            <VBox spacing="8" prefWidth="320" styleClass="form-panel">
                <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                <Label text="Product Details" styleClass="section-title"/>

                <Label text="SKU"/>
                <TextField fx:id="skuField" promptText="SKU"/>
                <Label text="Name *"/>
                <TextField fx:id="nameField" promptText="Product name"/>
                <Label text="Category"/>
                <TextField fx:id="categoryField" promptText="Category"/>
                <Label text="Unit"/>
                <TextField fx:id="unitField" promptText="e.g. L, kg, pcs"/>
                <HBox spacing="8">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Sell Price *"/>
                        <TextField fx:id="sellPriceField" text="0"/>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Cost Price"/>
                        <TextField fx:id="costPriceField" text="0"/>
                    </VBox>
                </HBox>
                <HBox spacing="8">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Stock Qty"/>
                        <TextField fx:id="stockField" text="0"/>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Min Stock"/>
                        <TextField fx:id="minStockField" text="0"/>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Max Stock"/>
                        <TextField fx:id="maxStockField" text="0"/>
                    </VBox>
                </HBox>
                <Label text="Barcode"/>
                <TextField fx:id="barcodeField" promptText="Barcode"/>
                <CheckBox fx:id="isBulkOilCheck" text="Bulk Oil (no stock limit)"/>

                <HBox spacing="8">
                    <Button text="Save" onAction="#handleSave" styleClass="primary-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button text="Adjust Stock" onAction="#handleAdjustStock" styleClass="secondary-button" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
